generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Discussion {
  id             String           @id @default(cuid())
  code           String           @unique
  question       String
  createdAt      DateTime         @default(now())
  currentStep    Int              @default(0)
  participants   Participant[]
  valueSelections ValueSelection[]
  stepResponses  StepResponse[]
  stepStatuses   StepStatus[]
  discussionQuestions DiscussionQuestion[]
  questionComments QuestionComment[]
}

model Participant {
  id              String          @id @default(cuid())
  name            String
  isHost          Boolean         @default(false)
  discussionId    String
  discussion      Discussion      @relation(fields: [discussionId], references: [id])
  valueSelections ValueSelection[]
  stepResponses   StepResponse[]
  stepStatuses    StepStatus[]
  questionVotes   QuestionSkipVote[]
  commentLikes    CommentLike[]

  @@unique([discussionId, name])
}

model ValueSelection {
  id            String      @id @default(cuid())
  value         String
  participantId String
  participant   Participant @relation(fields: [participantId], references: [id])
  discussionId  String
  discussion    Discussion  @relation(fields: [discussionId], references: [id])

  @@unique([participantId, value])
}

model StepResponse {
  id            String      @id @default(cuid())
  step          Int
  response      String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  participantId String
  participant   Participant @relation(fields: [participantId], references: [id])
  discussionId  String
  discussion    Discussion  @relation(fields: [discussionId], references: [id])

  @@unique([participantId, step])
}

model StepStatus {
  id            String      @id @default(cuid())
  step          Int
  ready         Boolean     @default(false)
  updatedAt     DateTime    @updatedAt
  participantId String
  participant   Participant @relation(fields: [participantId], references: [id])
  discussionId  String
  discussion    Discussion  @relation(fields: [discussionId], references: [id])

  @@unique([participantId, step])
}

model DiscussionQuestion {
  id            String      @id @default(cuid())
  text          String
  authorName    String
  createdAt     DateTime    @default(now())
  discussionId  String
  discussion    Discussion  @relation(fields: [discussionId], references: [id])
  skipVotes     QuestionSkipVote[]
  comments      QuestionComment[]
}

model QuestionSkipVote {
  id            String              @id @default(cuid())
  createdAt     DateTime            @default(now())
  questionId    String
  question      DiscussionQuestion  @relation(fields: [questionId], references: [id])
  participantId String
  participant   Participant         @relation(fields: [participantId], references: [id])

  @@unique([questionId, participantId])
}

model QuestionComment {
  id            String      @id @default(cuid())
  text          String
  authorName    String?
  anonymous     Boolean     @default(true)
  createdAt     DateTime    @default(now())
  questionId    String
  question      DiscussionQuestion @relation(fields: [questionId], references: [id])
  discussionId  String
  discussion    Discussion  @relation(fields: [discussionId], references: [id])
  likes         CommentLike[]
}

model CommentLike {
  id            String      @id @default(cuid())
  createdAt     DateTime    @default(now())
  commentId     String
  comment       QuestionComment @relation(fields: [commentId], references: [id])
  participantId String
  participant   Participant @relation(fields: [participantId], references: [id])

  @@unique([commentId, participantId])
}
